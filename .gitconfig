[color]
    diff   = auto
    status = auto
    branch = auto

[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold

[color "branch"]
    current = green bold
    remote = yellow bold

[diff]
    compactionHeuristic = true

[alias]
    aa = "!git add . && git status"
    cm = commit -m
    st = status
    df = diff --color --color-words --abbrev
    pl = pull origin HEAD
    ph = push origin HEAD
    rh = reset --hard
    lg = log --color --graph --pretty=format:'%C(yellow bold)%h%C(reset) -%C(yellow)%d%C(7) %s %C(green bold)(%cr) %C(white bold)[%an]%Creset' --abbrev-commit

